<% eventId = @item.category.event.id %>
<div id="items-show-container" class="default-container">
	<%= render "partials/bannercontainer" %>
	<div id="information-section" class="clearfixs">
		<div id="overview-container" class="col-lg-4 col-md-4 col-sm-4">
			<!-- div#categories-container -->
				<%= render "partials/categoriescontainer" %>
			<div id="items-container" class="info-box">
				<div id="items-header"><%= @item.category.title %> registered</div>
				<% if @item.category.items.count <= 2 %>
					<% 3.times do %> 
						<% @item.category.items.each do |item| %>
							<a href="/events/<%= eventId %>/categories/<%= @item.category.id%>/items/<%= item.id %>">
								<div id="" class="<%= item.title.gsub(/\s+/, '') %> item additional" data-item-id="<%= item.id %>">
									<span class="item-title"><%= item.title %></span>
								</div>
							</a>
						<% end %>
					<% end %>
				<% elsif @item.category.items.count <= 4 %>
					<% 1.times do %> 
						<% @item.category.items.each do |item| %>
							<a href="/events/<%= eventId %>/categories/<%= @item.category.id%>/items/<%= item.id %>">
								<div id="" class="<%= item.title.gsub(/\s+/, '') %> item additional" data-item-id="<%= item.id %>">
									<span class="item-title"><%= item.title %></span>
								</div>
							</a>
						<% end %>
					<% end %>
				<% else %>
				<% end %>
				<% @item.category.items.each do |item| %>
					<a href="/events/<%= eventId %>/categories/<%= @item.category.id%>/items/<%= item.id %>">
						<div id="" class="<%= item.title.gsub(/\s+/, '') %> item" data-item-id="<%= item.id %>">
							<span class="item-title"><%= item.title %></span>
						</div>
					</a>
				<% end %>
			</div>
				<!-- div#items-container -->
		</div>
		<div id="item-container" class="col-lg-8 col-md-8 col-sm-8">
			<div id="item" class="info-box">
				<div id="item-header">
					<%= @item.title %> <span class="brought-by">brought by <%= @item.user.username %></span>
				</div>
				<div id="item-description">
					<%= @item.description %>
				</div>
			</div>
			<a href="/events/<%= eventId%>/categories/<%=@item.category.id %>/items/new" id="bring-item">
				<button class="btn btn-default site-button"> 
					Bring Item
				</button>
			</a>
		</div>
	</div> 
</div>
	<!-- div#categories-show-container -->

<script type="text/javascript">
	var category = <%= raw(@item.category.to_json) %>;
	var item = <%= raw(@item.to_json) %>;
</script>