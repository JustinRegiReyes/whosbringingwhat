<div id="home-container">
	<% if flash[:alert] %>
	  <p class="alert alert-danger text-center"> <%= flash[:alert] %></p>
	<% end %>
	<div id="home-notifications">
		<div class="notification-wrapper">
			<div class="icon-wrapper">
				<i class="fa fa-times-circle-o" aria-hidden="true"></i>
			</div>
			<% if @notifications != nil %>
				<ul>
					<% @notifications.each do |n| %>
						<li>something</li>
					<% end %>
				</ul>
			<% else %>
				<div class="text-center">
					No new notifications
				</div>
			<% end %>
		</div>
	</div>
	<div class="search-wrapper">
		<div class="form-wrapper">
			<h3 class="text-center">Event Search</h3>
			<form class="form" method="POST" action="/events/search">
				<div class="text-center">
					<input type="text" class="search-full" name="event[title]" placeholder='Name of Event'>
					<br>
					<input type="text" class="search-full" name="event[username]" placeholder='Host username. For example, "Roro"'>
					<br>
					<div class="date-wrapper">
						<label>Date</label>
						<input type="date" name="event[date]">
					</div>
					<br>
					<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
					<button type="submit" class="btn btn-default text-center search">
						Search
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
