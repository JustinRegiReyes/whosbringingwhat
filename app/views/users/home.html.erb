	<h3 class="text-center">Find an event</h3>
	<h4 class="text-center tiny">Search case sensitive</h4>
	<% if flash[:alert] %>
	  <p class="alert alert-danger text-center"> <%= flash[:alert] %></p>
	<% end %>
	<br>
	<form class="form" method="POST" action="/events/search">
		<div id="search-wrapper" class="text-center">
			<label>What is it called?</label>
			<br>
			<input type="text" name="event[title]" placeholder='"New Year Big Bash", "Chill and Grill", etc.'>
			<br>
			<label>Host</label>
			<br>
			<input type="text" name="event[username]" placeholder='Host of event. For example, "Roro"'>
			<br>
			<label>What day is it?</label>
			<br>
			<input type="date" name="event[date]">
			<br>
			<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
			<button type="submit" class="btn btn-default text-center search">
				Search
			</button>
		</div>
	</form>


