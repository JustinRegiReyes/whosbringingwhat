<div id="signup-modal" class="auth-modal modal fade" tabindex="-1" role="dialog" aria-labelledby="myMediumModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1 class="modal-title">Signup</h1>
      </div>
      <%= form_for @user, url: "/users", method: :post do |f| %>
      <div class="modal-body">
      	<% if flash[:auth_error] %>
      		<% flash.each do |key, value| %>
        		<div class="flash <%= key %>">
        			<%= value %>
        		</div>
				<% end %>
        	<% end %>
          <div class="input-container">
            <div>
              <div>
                <i class="fa fa-user fa-2x" aria-hidden="true"></i>
              </div>
          	 <%= f.text_field :username, placeholder: "Username e.g. \"jmoriarty\"", class: "form-control" %>
            </div>
            <div>
              <div>
                <i class="fa fa-key" aria-hidden="true"></i>
              </div>
          	   <%= f.password_field :password, placeholder: raw("Password e.g. &bull;&bull;&bull;&bull;&bull;&bull;&bull;"), class: "form-control password-confirm" %>
            </div>
            <label>Confirm password</label>
            <div>
              <div>
                <i class="fa fa-key" aria-hidden="true"></i>
              </div>
          	   <%= f.password_field :password, placeholder: "Re-enter password", class: "form-control password-confirm" %>
            </div>
            <%= f.submit "Sign Up", class: "submit"%>
          </div>
            <!-- div.input-container -->
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div>
</div>