<div id="banner-container" style="background-image: linear-gradient(to right, rgba(0, 0, 0, .2), rgba(0, 0, 0, .2)), url('<%= @event.banner(:large) %>');">
	<div id="banner-overlay" class="clearfixs">
		<div id="date-container">
			<div id="date-box">
				<div id="date-mon">
					<%= @event.date_start.strftime("%b") %>
				</div>
				<div id="date-day">
					<%= @event.date_start.strftime("%d") %>
				</div>
			</div>
		</div>
			<!-- div#date-container -->
		<div id="title-container">
			<div id="title">
				<a href="/events/<%= @event.id %>">
					<span class="title"><%= @event.title %></span><br>
					<span class="event-host">
						hosted by 
						<span class="host-name"><%= @event.user.username %></span>
					</span>
				</a>
			</div>
		</div>
			<!-- div#title-container -->
		<button id="invite-guests" class="site-button" date-event-id="<%= @event.id %>">Invite</button>
	</div>
		<!-- div#banner-overlay -->
</div>
	<!-- div#banner-container -->