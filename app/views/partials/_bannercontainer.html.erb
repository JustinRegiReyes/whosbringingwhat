<div id="banner-container">
	<div id="banner-overlay" class="clearfixs">
		<div id="date-container">
			<div id="date-box">
				<div id="date-mon">
					<%= @event.date_start.strftime("%b") %>
				</div>
				<div id="date-day">
					<%= @event.date_start.strftime("%d") %>
				</div>
			</div>
		</div>
			<!-- div#date-container -->
		<div id="title-container">
			<div id="title"><a href="/events/<%= @event.id %>"><span class="title"><%= @event.title %></span>  <span class="event-host"> hosted by <span class="host-name"><%= @event.user.username %></span></span></a></div>
		</div>
			<!-- div#title-container -->
	</div>
</div>
	<!-- div#banner-container -->