<div id="login-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myMediumModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Login</h4>
      </div>
      <%= form_for @user, url: "/sessions", method: :post do |f| %>
      <div class="modal-body">
        <div class="row">
        	<% if flash[:auth_error] %>
        		<% flash.each do |key, value| %>
	        		<div class="flash <%= key %>">
	        			<%= value %>
	        		</div>
				<% end %>
        	<% end %>
          <div class="col-sm-12">
          	<%= f.text_field :username, placeholder: "Username e.g. \"jmoriarty\"", class: "form-control" %>
          	<%= f.password_field :password, placeholder: raw("Password e.g. &bull;&bull;&bull;&bull;&bull;&bull;&bull;"), class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Log In", class: "btn btn-default"%>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div>
</div>