<div id="search-results-container" class="default-container">
	<div id="search-container" class="col-sm-4">
		<div id="search-box">
			<form class="form" method="get" action="/events/search">
				<div class="text-center">
					<h4>Find an Event</h4>
					<input type="text" class="search-full" name="event[title]" placeholder='Name of Event' value='<%= @title != nil ? @title : ""%>'> 
					<input type="text" class="search-full" name="event[username]" placeholder='Host Username' value='<%= @username != nil ? @username : ""%>'> 

					<button type="submit" class="btn btn-default site-button">
						Search
					</button>
				</div>
			</form>
				<!-- form -->
		</div>
	</div>
	<div id="events-results-container" class="col-sm-8">
		<div id="search-results">
			<% if @events != nil %>
				<% if @events.length > 0 %>
					<div id="results-count">
						<span><%= @events.count %> event(s) found hosted by <%= @username %></span>
					</div>
					<% @events.each do |event| %>
						<div class="event-box clearfixs">
							<a href="/events/<%= event.id%>">
								<div id="event-banner" class="col-xs-5" style="background: url('<%= image_path("#{event.banner.url(:medium)}")%>') no-repeat center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;" ></div>
							</a>
							<div id="event-information" class="col-xs-7">
								<div id="event-guests">
									<i class="fa fa-users" aria-hidden="true"></i> <%= event.attending_events.count %>
								</div>
								<div id="event-title"><a href="/events/<%=event.id%>"><%=truncate("#{event.title}", length: 25) %></a></div>
								<div class="event-when">
									<%= event.date_start.strftime('%a %b %-d') %> at <%= event.time_start.strftime('%l:%M%P')%>
								</div>
								<div id="event-where"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.where %></div>
								<div id="event-highlights">
									<%= event.highlights %>
								</div>
							</div>
						</div>
							<!-- div.event-box -->
							<hr>
					<% end %>
						<!-- @events.each -->
				<% else %>
					<div id="results-count">
							<span><%= @events.count %> event(s) found hosted by <%= @username %></span>
					</div>
				<% end %>
					<!-- if @events.length > 0 -->
			<% else %>
				<div id="results-count">
					<% if @username.length > 0%>
						<span> No user found with the name <%= @username %> </span>
					<% else %>
						<span> Please enter a host username </span>
					<% end %>
				</div>
			<% end %>
				<!-- if @events -->
		</div>
	</div>
</div>