<div id="search-results-container" class="default-container">
	<div id="search-container" class="col-sm-4">
		<div id="search-box">
			<form class="form" method="get" action="/events/search">
				<div class="text-center">
					<h4>Find an Event</h4>
					<input type="text" class="search-full" name="event[title]" placeholder='Name of Event'>
					<input type="text" class="search-full" name="event[username]" placeholder='Host Username'>

					<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
					<button type="submit" class="btn btn-default site-button">
						Search
					</button>
				</div>
			</form>
				<!-- form -->
		</div>
	</div>
	<div id="events-results-container" class="col-sm-8">
		<div id="search-results">
			<div id="results-count">
				<span><%= @events.count %> events found hosted by Roro</span>
			</div>
			<% @events.each do |event| %>
				<div class="event-box clearfixs">
					<div id="event-banner" class="col-xs-5">
					</div>
					<div id="event-information" class="col-xs-7">
						<div class="event-when">
							<%= event.date_start.strftime('%a %b %-d') %> at <%= event.time_start.strftime('%l:%M%P')%>
						</div>
						<div id="event-title"><%= event.title %></div>
						<div id="event-where"><%= event.where %></div>
						<div id="event-highlights">
							<%= event.highlights %>
						</div>
					</div>
				</div>
					<!-- div.event-box -->
			<% end %>
		</div>
	</div>
</div>