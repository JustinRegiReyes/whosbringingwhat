<%= render "partials/navbar" %>

<h1>Your created events</h1>

<div class="container">
	<% if @events.length === 0 %>
		No events created.
	<% else %>
		<% @events.each do |event| %>
			<div class="container">
				<h3><a href="/events/<%= event.id %>"><%= event.title %></a></h3>
				<div class="container">
					<p><i><%= event.description %></i></p>
					<label>People attending:</label> <%= event.attending_event.users.length %>
					<div class="container attending-users-wrapper">
						<% event.attending_event.users.each do |user| %>
							<%= user.username %>
						<% end %>
					</div>
				</div>
			</div>
		<% end %> 
	<% end %>
</div>



