<h1>Attending Events</h1>
<div class="container">
	<% @attendingEvents.each do |attendingEvent| %>
		<div class="container">
			<h3><a href="/events/<%= attendingEvent.event.id %>"><%= attendingEvent.event.title %></a> <span class="host-username">hosted by <%= attendingEvent.event.user.username %></span></h3>
			<div class="container">
				
				<p><i><%= attendingEvent.event.description %></i></p>
				
				<label>People attending:</label> <%= attendingEvent.event.attending_event.users.length %>
				<br>
				<ul class="list-unstyled">
					<% attendingEvent.event.attending_event.users.each do |user| %>
						<li><%= user.username %></li>
					<% end %>
				</ul>	
			</div>
			
		</div>
		
	<% end %> 
</div>

